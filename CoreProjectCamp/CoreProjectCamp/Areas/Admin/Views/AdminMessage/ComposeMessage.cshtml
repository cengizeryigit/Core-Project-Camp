@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>

    <div class="col-lg-12 animated fadeInRight">
        <div class="mail-box-header">
            <div class="float-right tooltip-demo">
                <a href="mailbox.html" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslağa Taşı"><i class="fa fa-pencil"></i> Taslak</a>
                <a href="mailbox.html" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="İptal ET"><i class="fa fa-times"></i> İptal Et</a>
            </div>
            <h2>
                Yeni Mesaj Oluştur
            </h2>
        </div>
        <form method="post">
        <div class="mail-box">


            <div class="mail-body">

                
                    <div class="form-group row">
                        <label class="col-sm-1 col-form-label">Alıcı:</label>

                        <div class="col-sm-11"><input type="text" class="form-control"  ></div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-1 col-form-label">Konu:</label>

                        <div class="col-sm-11"><input type="text" class="form-control" name="Subject" /></div>
                    </div>
                     <div class="form-group row">
                        <label class="col-sm-1 col-form-label">Mesajınız:</label>
                        <div class="col-sm-11">
                        <textarea class="form-control" name="MessageDetails" rows="5" cols="9" ></textarea>
                        </div>
                    </div>
                

            </div>

           
            <div class="mail-body text-right tooltip-demo">
                    <button class="btn btn-sm btn-primary"><i class="fa fa-reply"></i> Gönder</button>
@*                <a  class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</a>
                <a  class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Vazgeç"><i class="fa fa-times"></i> Vazgeç</a>
                <a  class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Taslağa taşı"><i class="fa fa-pencil"></i> Taslak</a>*@
            </div>
            <div class="clearfix"></div>


           
        </div>
        </form>
    </div>

</body>

</html>


